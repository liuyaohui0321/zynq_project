/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include <xuartps.h>
#include "Ring-Buffer/ringbuffer_u8.h"

//extern int num;
extern u8_ring_buffer_t  ring_buffer;
u8 buffer[256]={0};

#define UARTLITE_DEVICE_ID      XPAR_UARTLITE_0_DEVICE_ID
int main()
{
    init_platform();
    //pl端串口中断实现回显 使用GIC中断
    UartLiteIntr(UARTLITE_DEVICE_ID);
    //ps端串口中断实现回显 使用GIC中断
    UartPsIntr();

    while (1)
    {
    	if(u8_ring_buffer_num_items(&ring_buffer)==32)
    	{
//    		u8_ring_buffer_dequeue(&ring_buffer,buffer[]);
    		u8_ring_buffer_dequeue_arr(&ring_buffer,buffer,32);
    		for(int i=0;i<32;i++)
			{
    			printf("buffer[%d]:%d\r\n",i,buffer[i]);
			}
    	}
    	memset(buffer,0,256);
	}

    cleanup_platform();
    return 0;
}
